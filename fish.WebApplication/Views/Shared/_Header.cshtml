            <nav>
                <ul class="sf-menu" style="display: flex; justify-content: center; align-items: center; list-style: none; padding: 0; margin: 0;">
                    <li style="margin: 0 10px 0 100px; display: flex; align-items: center; height: 50px;">
                        <a href="@Url.Action("Index", "Home")" style="font-size: 16px; white-space: nowrap;">HOME</a>
                    </li>
                    <li style="margin: 0 10px; display: flex; align-items: center; height: 50px;">
                        <a href="@Url.Action("Index", "DichVu")" style="font-size: 16px; white-space: nowrap;">Dịch vụ</a>
                    </li>
                    <li style="margin: 0 10px; display: flex; align-items: center; height: 50px;">
                        <a href="@Url.Action("Index", "Index3")" style="font-size: 16px; white-space: nowrap;">Đặt câu hỏi</a>
                    </li>
                    <li style="margin: 0 10px; display: flex; align-items: center; height: 50px;">
                        <a href="@Url.Action("Index", "Index5")" style="font-size: 16px; white-space: nowrap;">Liên hệ</a>
                    </li>
                </ul>
                <div class="clear"></div>
            </nav>
            <div class="clear"></div>
        </div>



        <div class="logo">
            <h1>
                <a href="@Url.Action("Index", "Home")"></a>
            </h1>
        </div>
        <div class="box-slider">
            <ul class="roundabout">
