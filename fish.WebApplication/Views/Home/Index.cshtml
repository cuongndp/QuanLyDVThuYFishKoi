@{
    ViewBag.Title = "Home Page";
}


<style>

    /* Reset CSS */
    * {
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        line-height: 1.6;
        background-color: #f9f9f9;
        color: #333;
        overflow-x: hidden;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    ul {
        list-style: none;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    /* Hero Section */
    .hero {
        background: linear-gradient(to bottom, rgba(0, 31, 63, 0.7), rgba(0, 31, 63, 0.9)), url('https://via.placeholder.com/1920x1080') no-repeat center center/cover;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: #fff;
        position: relative;
    }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .hero p {
            font-size: 1.5rem;
            margin-bottom: 2rem;
            max-width: 700px;
            margin-left: auto;
            margin-right: auto;
        }

        .hero .btn {
            padding: 0.8rem 2rem;
            background-color: #ff4500;
            color: #fff;
            font-size: 1.2rem;
            font-weight: bold;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .hero .btn:hover {
                background-color: #e63900;
            }

    /* About Section */
    .about {
        padding: 4rem 1rem;
        background-color: #fff;
    }

        .about .container {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 2rem;
        }

        .about img {
            width: 100%;
            max-width: 500px;
            border-radius: 10px;
        }

        .about .content {
            flex: 1;
        }

        .about h2 {
            font-size: 2.5rem;
            color: #001f3f;
            margin-bottom: 1rem;
        }

        .about p {
            margin-bottom: 1rem;
        }

    /* Features Section */
    .features {
        background-color: #f9f9f9;
        padding: 4rem 1rem;
        text-align: center;
    }

        .features h2 {
            font-size: 2.5rem;
            color: #001f3f;
            margin-bottom: 2rem;
        }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .feature-item {
        background-color: #fff;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .feature-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        .feature-item img {
            width: 50px;
            margin-bottom: 1rem;
        }

        .feature-item h3 {
            font-size: 1.5rem;
            color: #ff4500;
            margin-bottom: 0.5rem;
        }

        .feature-item p {
            color: #555;
        }
    /*css của các đội ng*/
    .gallery-container {
        text-align: center; /* Căn giữa nội dung */
        margin-bottom: 20px; /* Khoảng cách giữa tiêu đề và gallery */
    }

        .gallery-container h2 {
            font-size: 2rem; /* Kích thước chữ tiêu đề */
            font-weight: bold;
            color: white; /* Màu chữ trắng */
            background-color: rgba(0, 0, 0, 0.7); /* Nền tối cho chữ nổi bật */
            display: inline-block; /* Để kích thước phù hợp nội dung */
            padding: 10px 20px; /* Tạo khoảng cách bên trong */
            border-radius: 10px; /* Bo góc cho tiêu đề */
        }

    .gallery-grid {
        display: flex; /* Sắp xếp hình ảnh theo hàng ngang */
        justify-content: center; /* Căn giữa các hình ảnh */
        gap: 100px; /* Khoảng cách giữa các hình ảnh */
    }

        .gallery-grid img {
            width: 200px; /* Đặt chiều rộng cố định cho tất cả ảnh */
            height: 200px; /* Đặt chiều cao cố định */
            object-fit: cover; /* Đảm bảo ảnh không bị méo */
            border-radius: 15px; /* Tạo bo góc cho hình ảnh */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .gallery-grid img:hover {
                transform: scale(1.05); /* Hiệu ứng phóng to khi hover */
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15); /* Thêm bóng khi hover */
            }

    /* Testimonials Section */
    .testimonials {
        padding: 4rem 1rem;
        background: #ffffff; /* Đổi nền thành trắng */
        color: #333; /* Đổi màu chữ thành tối để nổi bật trên nền trắng */
        text-align: center;
        border-top: 5px solid #0059b3; /* Thêm viền phía trên để phân tách */
        border-bottom: 5px solid #0059b3; /* Thêm viền phía dưới */
    }

        .testimonials h2 {
            margin-bottom: 2rem;
            font-size: 2.5rem;
            font-weight: bold;
            text-transform: uppercase;
            color: #0059b3; /* Đổi màu tiêu đề để phù hợp */
        }

    .testimonial-container {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    .testimonial-item {
        background: #f9f9f9; /* Đổi nền thành màu xám nhạt */
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Thêm bóng mờ để nổi khối */
        text-align: center;
        max-width: 350px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .testimonial-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
        }

        .testimonial-item img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 1rem;
            border: 3px solid #0059b3; /* Đổi màu viền thành xanh dương đậm */
        }

        .testimonial-item blockquote {
            font-style: italic;
            margin-bottom: 1rem;
            color: #333; /* Đổi màu chữ trong blockquote */
        }

        .testimonial-item .author {
            font-weight: bold;
            color: #0059b3; /* Đổi màu tên khách hàng */
            margin-top: 0.5rem;
        }










        /*  footer   */
    .lam-footer-container {
        background-color: #003366; /* Màu xanh dương đậm */
        color: #fff;
        padding: 40px 20px;
    }

    .lam-footer-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        max-width: 1200px;
        margin: 0 auto;
        padding-bottom: 20px;
        border-bottom: 1px solid #ccc;
    }

    .anh-footer-logo img {
        width: 100px;
        border-radius: 50%;
    }

    .anh-footer-logo p {
        margin-top: 10px;
        text-align: center;
        line-height: 1.5;
    }

    .binh-footer-info h2 {
        font-size: 24px;
        color: #00cfff; /* Màu xanh nhạt */
        margin-bottom: 10px;
    }

    .binh-footer-info p {
        line-height: 1.8;
    }

    .uyen-footer-bottom {
        text-align: center;
        padding-top: 20px;
        font-size: 14px;
        color: #ccc;
    }

        .uyen-footer-bottom p {
            margin: 5px 0;
        }





</style>









